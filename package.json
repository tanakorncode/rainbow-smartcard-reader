{
  "name": "smart-card-reader",
  "version": "1.0.2",
  "description": "โปรแกรมอ่านบัตรประชาชน ระบบคิวอัจฉริยะ",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "build": "electron-builder --mac --win",
    "postinstall": "electron-builder install-app-deps",
    "server": "http-server dist -p 8080",
    "rebuild": "./node_modules/.bin/electron-rebuild"
  },
  "repository": "https://github.com/tanakorncode/sys-smartcard-reader.git",
  "keywords": [
    "Electron",
    "MComScience",
    "UDH Smart Card Reader"
  ],
  "author": "MComScience",
  "license": "CC0-1.0",
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^17.2.0",
    "electron-builder": "^23.0.2",
    "electron-rebuild": "^3.2.7",
    "electron-reloader": "^1.2.3"
  },
  "dependencies": {
    "@serialport/parser-readline": "^10.3.0",
    "auto-launch": "^5.0.5",
    "axios": "^0.21.1",
    "crypto": "^1.0.1",
    "datauri": "^4.1.0",
    "dotenv": "^10.0.0",
    "electron-log": "^4.2.1",
    "electron-updater": "^4.3.1",
    "legacy-encoding": "^3.0.0",
    "menubar": "^9.0.2",
    "node-rsa": "^1.1.1",
    "pcsclite": "^1.0.0",
    "serialport": "^10.4.0",
    "socket.io-client": "^4.1.3",
    "toastr": "^2.1.4",
    "url": "^0.11.0",
    "utf8-to-ansi": "^1.0.3",
    "uuid": "^8.3.2"
  },
  "build": {
    "productName": "Smart Card Reader",
    "copyright": "Copyright © 2020 ${author}",
    "publish": [
      {
        "provider": "generic",
        "url": "https://sysvms.syssteel.com/software/smart-card-reader/releases"
      }
    ],
    "appId": "com.kubota-smart-card-reader.app",
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ],
      "icon": "thai-smart-card.icns"
    },
    "win": {
      "icon": "Thai-smart-card.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nodeGypRebuild": false,
    "extraResources": [
      "./environment/**",
      "./output/**"
    ]
  }
}
